	@RequestMapping("/chkAdmin.do")
	@ResponseBody
	public boolean chkUserIsAdmin(String loginId) {

		Room room = roomService.retrieveRoomByAdmin(loginId);

		if (room != null) {
			System.out.println(room.getTitle());
			return true;
		}

		return false;
	}

